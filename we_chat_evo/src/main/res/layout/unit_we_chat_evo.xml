<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:scrollbarThumbVertical="@drawable/scrollbar_vertical"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:id="@+id/weContainer"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/res_borderless_back"
            android:backgroundTint="#50000000"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:padding="50dp"
            android:adjustViewBounds="true"
            android:src="@drawable/res_mm_shortcuts"/>

        <Switch
            android:id="@+id/weSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/weNote"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>
